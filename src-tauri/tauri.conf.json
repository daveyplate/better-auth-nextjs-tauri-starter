{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "better-auth-starter",
    "version": "0.1.0",
    "identifier": "com.better-auth-starter",
    "build": {
        "frontendDist": "../out",
        "devUrl": "http://localhost:3000",
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm export"
    },
    "app": {
        "windows": [
            {
                "title": "better-auth-starter",
                "width": 800,
                "height": 600,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    },
    "plugins": {
        "deep-link": {
            "desktop": {
                "schemes": [
                    "bas"
                ]
            }
        }
    }
}
